@model LoginViewModel

   <div class="container">
        <div class="row gy-3 gy-md-4 gy-lg-4 ">
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <a href="/home/index" class="text-muted mb-3 text-decoration-none fs-5"><i class="bi bi-chevron-left"></i> Back</a>
                <h2 class="fw-bold text-dark fs-3 mt-4">
                    Welcome 👋 
                </h2>
                <p class="text-secondary fs-5 mt-1 fw-normal">
                    Please login here
                </p>
    
                <form asp-action="savelogin" method="post" >
                    <div asp-validation-summary="All" class="row">
                        <div class="col-md-10">
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label text-dark">Email address</label>
                                <input asp-for="Email" class="form-control rounded-pill shadow-sm" id="email" placeholder="name@example.com">
                            </div>
                            <div class="mb-4">
                                <label  asp-for="Password" class="form-label text-dark">Password</label>
                                <input  asp-for="Password" id="password" class="form-control rounded-pill shadow-sm" placeholder="Password">
                            </div>
    
                              <div class="d-flex justify-content-between align-items-center">
                            @* 
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                    <label class="form-check-label text-secondary" for="rememberMe">
                                        Remember Me
                                    </label>
                                </div>
                            *@
                                <div> 

                                    <a href="/home/forgot_password" class="text-dark fw-bold text-decoration-none">Forgot Password?</a>
                                </div>
                            </div>
    
                            <div class="mt-4">
                                <button type="submit" class="btn btn-dark rounded-pill px-4 shadow-sm w-100" >Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
    
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img src="~/imgs/login.png" alt="Login Image" class="img-fluid rounded">
            </div>
        </div>
    </div>